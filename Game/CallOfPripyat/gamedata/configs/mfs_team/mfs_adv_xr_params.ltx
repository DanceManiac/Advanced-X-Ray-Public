[global]
engine_mode = cop 				;; Режим работы движка cop|cs (Зов Припяти|Чистое Небо)
discord_app_id = 745606008499601438	;; ID приложения для Discord Rich Presense
discord_show_task = true		;; Выводить в статус Дискорда текущий квест
ls_tips_enabled = true			;; Включены ли 100 советов по выживанию в Зоне
developer_mode = false			;; Режим разработчика (больше команд, телепортация в демо рекорде, редактор погоды)
block_console = false			;; Заблокировать использование консоли
auto_snd_targets = true			;; Автоматическое определение кол-ва источников звука

[gameplay]
