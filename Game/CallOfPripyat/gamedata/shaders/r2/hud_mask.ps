#include "common.h"
#include "hud_mask_common.h"

//////////////////////////////////////////////////////////////////////////////////////////
//pixel
float4 main(AntiAliasingStruct INStruct) : COLOR
{
	float4 hud_mask_distortion = tex2D(s_hud_mask,INStruct.texCoord0);
	float2 texcoord_offset = (hud_mask_distortion.xy - (127.f / 255.f))*def_distort;//fix newtral offset
	float2 texcoord = INStruct.texCoord0 + texcoord_offset * hud_mask_params.x;
	float3 scene = tex2D(s_image,texcoord);
	return float4(scene, 1.f);
} 