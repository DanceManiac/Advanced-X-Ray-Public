#include "common.h"

struct 	v2p
{
 	half2 	tc0: 	TEXCOORD0;	// base
	half4		c0	: COLOR0;		// c0=all lighting
};


//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
half4 	main_ps_1_1	( v2p I )	: COLOR
{
	half4 res = tex2D	(s_base,I.tc0);
	res.rgb = lerp( half3(0.5, 0.5, 0.5), res.rgb, I.c0.a);
	return res;
}

