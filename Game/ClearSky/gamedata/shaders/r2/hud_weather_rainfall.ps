#include "common.h"
#include "hud_mask_common.h"

uniform	sampler2D s_hud_rainfall;
uniform float4 hud_rainfall_params; // x=intensity

float4 main(p_screen I) : COLOR
{
	//Sample rainfall texture
	float4 rainfall_tex = tex2D(s_hud_rainfall, I.tc0);
	
	// Calculate the interpolated intensity
    float intensity = smoothstep(0.5, 1.0, hud_rainfall_params.x);

	//Prepare refracted texcoord
    float4 refraction = float4(1, 1, 1,1) + rainfall_tex.xyxy * intensity;	
    float4 refr_tc = float4(I.tc0.xy, 1,1);
    refr_tc *= refraction;
    refr_tc.xy /= refr_tc.w;
	
	//Sample scene with refracted texcoord
	float3 image = tex2D(s_image, refr_tc.xy).xyz;

	//Mix
	image = lerp(image, rainfall_tex.w, rainfall_tex.w * intensity);
	
	//Output
	return float4(image, 1.0);
} 