#include "common.h"

Texture2D s_hud_acid_rain;
uniform float4 hud_acid_rain_params; // x=intensity

float4 main(p_screen I) : SV_Target
{
	float2	texcoord 				= I.tc0;
	float adc = hud_acid_rain_params.x;
	float intensity = (sin(timers.x * 3.0) * hud_acid_rain_params.x + hud_acid_rain_params.x);
	float4	acid_rain_texture 		= s_hud_acid_rain.Sample(smp_rtlinear, texcoord);
	float3 	scene 					= s_image.Sample(smp_rtlinear, I.tc0).xyz;
	scene = lerp(scene, acid_rain_texture.xyz, acid_rain_texture.w * intensity);

	return float4(scene, 1.0f);
}
