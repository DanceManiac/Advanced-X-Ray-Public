#include "common.h"

Texture2D s_hud_radiation_rain;
uniform float4 hud_radiation_rain_params; // x=intensity

float4 main(p_screen I) : SV_Target
{	
	float2	texcoord 				= I.tc0;
	float4	radiation_texture 	= s_hud_radiation_rain.Sample(smp_rtlinear, texcoord);
	float3 	scene 					= s_image.Sample(smp_rtlinear, I.tc0).xyz;
	
	// Calculate the interpolated intensity
    float intensity = smoothstep(0.5, 1.0, hud_radiation_rain_params.x);
	
	scene = lerp(scene, radiation_texture.xyz, radiation_texture.w * intensity);

	return float4(scene, 1.0f);
}