#include "common.h"

Texture2D s_nightvision_hud_texture;
uniform float4 hud_nightvision_texture_params; // x=intensity

float4 main(p_screen I) : SV_Target
{	
	float2	texcoord 				= I.tc0;
	float4	nightvision_texture 	= s_nightvision_hud_texture.Sample(smp_rtlinear, texcoord);
	float3 	scene 					= s_image.Sample(smp_rtlinear, I.tc0).xyz;
	
	// Calculate the interpolated intensity
    float intensity = smoothstep(0.5, 1.0, hud_nightvision_texture_params.x);
	
	scene = lerp(scene, nightvision_texture.xyz, nightvision_texture.w * intensity);

	return float4(scene, 1.0f);
}