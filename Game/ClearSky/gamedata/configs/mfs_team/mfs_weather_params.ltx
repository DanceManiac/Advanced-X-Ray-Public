[environment] ;;Различные настройки для погоды
sun_dir_mode = 0					;; Режим движения солнца. 0 - движковый ход, 1 - с конфигов погоды, 2 - с общего конфига движка
winter_mode = false					;; Зимний режим (влияет на циклы и эффекты)
weather_dof = false					;; Использовать параметры DoF из погоды
lowland_fog_from_weather = false	;; Использовать параметры низинного тумана из погоды
weather_color_grading = false		;; Влияние погоды на цветокоррекцию
wind_volume_koef = 16.5				;; Коэффицент общей громкости звука ветра
wind_influence_koef = 2.3			;; Коэффицент влияния ветра на колыхание травы и деревьев. Значение 0.0 отключает эффект.
moon_phases_mode = off				;; Режим лунных фаз (off|8days|28days)
fog_infl_volumetric_light = false	;; Влияние интенсивности тумана на интенсивность объёмного света
weather_fog_clamping_max = 900.0	;; Предельно возможная дальность тумана. Значение 0.0 отключает ограничитель.

